    = render( \
      OverviewCardComponent.new( \
        title: 'Momentaner Einsatz',
        text: 'Stiftung SWO',
        type: OverviewCardComponent::TYPES[:info],
        links: { t('.links.all_services') => civil_servants_services_path } \
      ) \
    )
  - else
    = render(\
          OverviewCardComponent.new(\
            title: '',
            text: 'Kein aktueller Einsatz',
            type: OverviewCardComponent::TYPES[:info],
            links: { t('.links.all_services') => civil_servants_services_path } \
          ) \
        )

