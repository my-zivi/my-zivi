doctype html
html lang=I18n.locale.to_s
  head
    meta content='text/html; charset=UTF-8' http-equiv='Content-Type' /
    meta name='viewport' content='width=device-width, initial-scale=1' /
    title = t('my_zivi')
    = csrf_meta_tags
    = csp_meta_tag
    = javascript_pack_tag 'organizations/application', 'data-turbo-track': 'reload'
    = stylesheet_pack_tag 'organizations/application', media: 'all', 'data-turbo-track': 'reload'
    = javascript_tag { render partial: 'layouts/organizations/exports', formats: [:js] }
    = content_for(:head_additions)
    = render 'layouts/sentry'
  body
    main#top
      .container data-layout="container"
        = render 'base/organizations/navbar'
        .content
          = render 'base/organizations/horizontal_nav_bar'
          = render 'layouts/breadcrumb'
          = render 'base/flash_messages'
          = yield
    = javascript_pack_tag 'falcon', 'data-turbo-track': 'reload'
