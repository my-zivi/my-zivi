doctype html
html lang=I18n.locale.to_s
  head
    meta content='text/html; charset=UTF-8' http-equiv='Content-Type' /
    meta name='viewport' content='width=device-width, initial-scale=1' /
    title = t('my_zivi')
    = csrf_meta_tags
    = csp_meta_tag
    = vite_client_tag
    = vite_javascript_tag 'civil_servants/application', 'data-turbo-track': 'reload'
    = vite_stylesheet_tag 'civil_servants/application', media: 'all', 'data-turbo-track': 'reload'
    = render 'layouts/sentry'
  body
    main#top
      .container data-layout="container"
        = render 'base/civil_servants/navbar'
        .content
          = render 'base/civil_servants/horizontal_nav_bar'
          = render 'layouts/breadcrumb'
          = render 'base/flash_messages'
          = yield
    = vite_javascript_tag 'falcon', 'data-turbo-track': 'reload'
